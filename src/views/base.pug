doctype html 

html(lang="ko")
    head 
        title #{pageTitle} | Deanterest
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.11/mvp.css")
    body 
        header 
          
            h1=pageTitle 

            nav 
                ul 
                    li 
                        a(href="/") Home
                   
                    li 
                        a(href="/search") Search Video
                    if loggedIn 
                        li 
                            a(href="/users/logout") Log out
                        li 
                            a(href="/users/edit") #{loggedInUser.name}'s Profile Edit
                        li 
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href=`/users/${loggedInUser._id}`) My Videos

                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
    main 
        block content
       
    include partials/footer