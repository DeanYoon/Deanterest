header 
    a(href="/").header__logo
        i.fab.fa-pinterest
    
    nav 
        ul 
          
            li 
                a(href="/") Home
           
            if loggedIn 
                li 
                    a(href="/videos/upload") Create
                li.search.loggedIn
                    form(method="GET" id='search-header' action='/search')
                        input(placeholder="Search by title", name="keyword", type="text", id='header-input')
            else            
                li.search 
                    form(method="GET" id='search-header' action='/search')
                        input(placeholder="Search by title", name="keyword", type="text", id='header-input-loggedIn')

            if loggedIn
                li 
                    a(href="/users/logout") Log out
                li 
                    a(href="/users/edit") #{loggedInUser.name}'s Profile Edit
                li 
                    a(href=`/users/${loggedInUser._id}`)
                     
                        if loggedInUser.avatarUrl
                            if isHeroku
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else
                                if loggedInUser.avatarUrl.startsWith('http')
                                    img.header__avatar(src=loggedInUser.avatarUrl)
                                else
                                    img.header__avatar(src='/'+loggedInUser.avatarUrl)

                           
            else
                li 
                    a(href="/join") Join
                li 
                    a(href="/login").header__btn
                        i.far.fa-user
                        span 로그인