extends base
include mixins/video

block content 
    form(method="GET").search__form
        input(placeholder="Search by title", name="keyword", type="text")
        input(type="submit", value="Search Now!")


    div.video__grid
        each video in videos 
            +video(video)
            +video(video)
            +video(video)
            +video(video)
            +video(video)
            +video(video)
            +video(video)
            +video(video)
        else 
            span.empty__message video not found